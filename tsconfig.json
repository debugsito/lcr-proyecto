{
    "exclude": [
        "./build",
        "jest.config.ts",
        "./test"
    ],
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "ES2021",
        "lib": ["es6"],
        "module": "commonjs",
        "rootDir": "src",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": [
            "@types",
            "./node_modules/@types"
          ],   
    }
}